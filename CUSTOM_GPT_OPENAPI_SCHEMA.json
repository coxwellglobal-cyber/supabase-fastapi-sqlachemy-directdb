{
  "openapi": "3.1.0",
  "info": {
    "title": "Coxwell Product Intelligence API",
    "version": "1.0.0",
    "description": "Internal Coxwell API used by AI systems. This API accepts natural-language intent and returns structured product data from a read-only database view. Raw SQL is NOT allowed."
  },
  "servers": [
    {
      "url": "https://supabase-2whl.onrender.com",
      "description": "Coxwell Production API (Render)"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health Check",
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "Service health status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "service": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/ai_query": {
      "post": {
        "summary": "Query Coxwell product intelligence (intent-based)",
        "operationId": "aiQuery",
        "description": "Send a natural-language product question. The backend safely converts intent into a read-only query on public.v_product_intelligence and returns structured results.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AIQueryRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful query response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AIQueryResponse"
                }
              }
            }
          },
          "400": { "description": "Bad request" },
          "401": { "description": "Unauthorized (invalid API key)" },
          "429": { "description": "Rate limit exceeded" },
          "500": { "description": "Internal server error" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AIQueryRequest": {
        "type": "object",
        "additionalProperties": false,
        "required": ["api_key", "question"],
        "properties": {
          "api_key": {
            "type": "string",
            "description": "rex-QAQ_bNvD7j0E2wXrCEzRL"
          },
          "question": {
            "type": "string",
            "description": "Natural-language product question. Example: Show all 25mm multicell polycarbonate products"
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50,
            "description": "Optional maximum number of rows to return"
          },
          "mode": {
            "type": "string",
            "default": "products",
            "description": "Query mode. Only supported value is 'products'."
          }
        }
      },
      "ProductRow": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "product_name": { "type": "string" },
          "thickness": { "type": "number" },
          "product_class": { "type": "string" },
          "color": { "type": "string" },
          "finish": { "type": "string" }
        }
      },
      "AIQueryResponse": {
        "type": "object",
        "properties": {
          "mode": { "type": "string" },
          "question": { "type": "string" },
          "row_limit": { "type": "integer" },
          "row_count": { "type": "integer" },
          "latency_ms": { "type": "integer" },
          "rows": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProductRow"
            }
          }
        }
      }
    }
  }
}
